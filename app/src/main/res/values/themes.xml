<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
     Splash Screen application theme.
     -->
    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Theme settings -->
        <item name="android:windowDisablePreview">true</item>

        <!-- Status bar color -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Navigation bar color -->
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- Custom Activity Animation -->
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
    </style>

    <!--
    Splash Screen application theme.
    -->
    <style name="OnBoardingTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Theme settings -->
        <item name="android:windowDisablePreview">true</item>

        <!-- Status bar color -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Navigation bar color -->
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- Custom Activity Animation -->
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
    </style>

    <!--
    Base application theme.
    -->
    <style name="Theme.ESP32Camera" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Theme settings -->
        <item name="android:windowDisablePreview">true</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusBar</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/bottomNavBar</item>

        <!-- Custom Activity Animation -->
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>


        <!-- Primary brand color -->
        <item name="colorPrimary">@color/darkGray</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/darkGray</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <!--
    BottomSheetDialog Theme - behind the sheet
    -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>

    <!--
    Progress Circle BottomSheetDialog
    -->
    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>
</resources>